#!/usr/bin/make -f

#export DH_VERBOSE = 1

PKGVERSION:=$(shell cat version.txt)
DEB_HOST_MULTIARCH?=$(shell dpkg-architecture -qDEB_HOST_MULTIARCH)
LIBDIR:=/usr/lib/$(DEB_HOST_MULTIARCH)
INCDIR:=/usr/include

%:
	dh $@ --sourcedirectory=SOURCES --parallel

override_dh_auto_build:
	dh_auto_build -- -f bpfjit.mk LIBDIR=$(LIBDIR)

override_dh_auto_test:
	dh_auto_test tests

override_dh_auto_install:
	dh_auto_install -- -f bpfjit.mk LIBDIR=$(LIBDIR) INCDIR=$(INCDIR)

override_dh_strip:
	dh_strip -p libbpfjit1 --dbg-package=libbpfjit1-dbg
	dh_strip -a --remaining-packages

override_dh_gencontrol:
	dh_gencontrol -- -v$(PKGVERSION)
