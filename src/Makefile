LIB=	bpfjit
SRCS=	bpfjit.c

WARNS=	4

MKPICLIB=	yes
MKSTATICLIB=	yes
LDCOMPILER=	yes
SHLIB_MAJOR=	1
SHLIB_MINOR=	0
SHLIB_TEENY=	0

COPTS+=		-O2 -g
#XXX CPPFLAGS+=	-DBPFJIT_USE_UDIV
CPPFLAGS+=	-DSLJIT_CONFIG_AUTO=1
CPPFLAGS+=	-DSLJIT_VERBOSE=0
CPPFLAGS+=	-DSLJIT_DEBUG=0
CPPFLAGS+=	-I ../sljit/sljit_src/
CPPFLAGS+=	-I ../

LDADD+=		-lsljit
LDFLAGS+=	-L ${.OBJDIR}/../sljit/sljit_src

.include <mkc.lib.mk>
